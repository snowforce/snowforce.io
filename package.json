{
  "name": "snowforce",
  "description": "Open Source Salesforce Community Conference Website Template Built with Lightning Web Components",
  "version": "0.0.0",
  "author": "Alex Bryner",
  "bugs": "https://github.com/AlexBryner/snowforce/issues",
  "dependencies": {
    "@lwc/wire-service": "1.1.1",
    "dotenv": "^8.2.0",
    "flickity": "^2.2.1",
    "jsforce": "^2.0.0-alpha.6",
    "lwc-services": "^1.3.8",
    "navigo": "^7.1.2",
    "pg": "^7.12.1",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "reselect": "^4.0.0",
    "sanitize-html": "^1.20.1",
    "winston": "^3.2.1",
    "workbox-build": "^4.3.1"
  },
  "devDependencies": {
    "husky": "^3.0.7",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=10.0.0 <11.0.0"
  },
  "homepage": "https://github.com/AlexBryner/snowforce",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "lwc"
  ],
  "license": "MIT",
  "lint-staged": {
    "**/*.{css,html,js,json,md,ts,yaml,yml}": [
      "prettier --write"
    ],
    "./src/**/*.js": [
      "eslint"
    ],
    "*": [
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/server/**/*.js",
      "scripts/express-dev.js"
    ],
    "ext": "js",
    "ignore": [
      "src/**/*.spec.js",
      "src/**/*.test.js"
    ],
    "exec": "node ./scripts/express-dev.js"
  },
  "repository": "AlexBryner/snowforce",
  "scripts": {
    "prebuild": "node scripts/compileStaticResources.js",
    "build": "lwc-services build -m production",
    "postbuild": "node scripts/buildWorkbox.js",
    "compileResources": "node scripts/compileStaticResources.js",
    "prebuild:development": "node scripts/devBuildStaticResources.js",
    "build:development": "lwc-services build",
    "postbuild:development": "lwc-services serve",
    "lint": "eslint ./src/**/*.js",
    "prettier": "prettier --write '**/*.{css,html,js,json,md,ts,yaml,yml}'",
    "prettier:verify": "prettier --list-different '**/*.{css,html,js,json,md,ts,yaml,yml}'",
    "serve": "lwc-services serve",
    "start": "lwc-services serve",
    "test:unit": "lwc-services test:unit",
    "test:unit:coverage": "lwc-services test:unit --coverage",
    "test:unit:debug": "lwc-services test:unit --debug",
    "test:unit:watch": "lwc-services test:unit --watch",
    "watch": "run-p watch:client watch:server",
    "watch:client": "lwc-services watch",
    "watch:server": "nodemon"
  }
}
